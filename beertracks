#!/usr/bin/env ruby

require 'optparse'

command = ARGV[0]
name = ARGV[1]
options = {}

OptionParser.new do |opts|
  opts.banner = "Usage: beertracks [command][option]"

  opts.on("-s", "--style", "The style") do |style|
    options[:style] = style
  end

  opts.on("-c", "--cost", "The cost") do |cost|
    options[:cost] = cost
  end

  opts.on("-o", "--oz", "The ounces") do |ounces|
    options[:ounces] = ounces
  end
end.parse!

if name.nil? or name.empty?
  puts "You must provide the name of the beer you drank."
else
  missing_things = []
  unless options[:style]
    missing_things << "style"
  end

  unless options[:cost]
    missing_things << "cost"
  end
  unless options[:ounces]
    missing_things << "total ounces"
  end
  puts "You must provide the #{missing_things.join(" and ")} of the beer you drank."
end